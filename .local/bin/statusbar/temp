#!/bin/sh

# Displays temperature of current area

temp=$(curl -s "wttr.in/?format=%t")
var=$(curl -s "wttr.in/?format=%t" | grep -i unknown)

if [ "$var" ]; then
	echo "  none "
else
	echo "  $temp "
fi

if [ "$temp" = "" ]; then
    echo ""
fi

