quote=$(cat ~/.local/share/motd)
if [ $? -gt 0 ]
then
    quote="No quotes yet!"
fi

if [ "${#quote}" -gt $viewport_size ]
then
    viewport_start=$(($viewport_start + 1))
    if (( $viewport_start >= ${#quote} - $viewport_size + 1 ))
    then
        viewport_start=0
        sleep $viewport_end_pause
    fi
    quote="${quote:viewport_start:viewport_size}"
fi

xsetroot -name "$quote | $charge_capacity$charge_status | ï€¨ $volume | $( date +"%F %R" )"
sleep 0.4
