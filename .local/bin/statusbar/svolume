#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted. Uses PulseAudio by default,

volstat="$(pactl list sinks)"

# echo "$volstat" | grep -q "Mute: yes" && printf "ïŽ¢ \\n" && exit
echo "$volstat" | grep -q "Mute: yes" && printf " MUTE \\n" && exit

vol="$(echo "$volstat" | grep '[0-9]\+%' | sed "s,.* \([0-9]\+\)%.*,\1,;1q")"

printf "%s %s%% \\n" " VOL:" "$vol"
