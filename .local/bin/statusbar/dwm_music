#!/bin/sh

# Displays the current song being played on mpd

ARTIST=$(mpc current -f %artist%)
SONG=$(mpc current -f %title%)
STATUS=$(mpc status | sed -n 2p | awk '{print $1}')
# FRESH=$(pkill -RTMIN+11 dwmblocks)

if [ ! $SONG ]; then
	echo ""
else
    if [ "$STATUS" = "[playing]" ]; then
			ICON=""
    else
			# ICON=""
			ICON=""
    fi
			
	echo "$ICON $ARTIST - $SONG "
fi

